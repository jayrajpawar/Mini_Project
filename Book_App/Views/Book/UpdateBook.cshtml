@model BookApp.Models.Book
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Update Product</h1>
                </div>
                <div class="card-body">
                    <form id="bookForm" method="post" asp-action="UpdateBook">
                        <input type="hidden" asp-for="bookId" />
                        <div class="form-group">
                            <label asp-for="bookName"></label>
                            <input type="text" asp-for="bookName" class="form-control" placeholder="Enter book name" />
                        </div>
                        <div class="form-group">
                            <label asp-for="author"></label>
                            <input type="text" asp-for="author" class="form-control" placeholder="Enter Author of book" />
                        </div>
                        <div class="form-group">
                            <label asp-for="price"></label>
                            <input type="text" asp-for="price" class="form-control" placeholder="Enter Price of book" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-lg-end" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
